#include <stdio.h>
#include <math.h>

// ---------------- Activation functions ----------------

// linear: ฟังก์ชันเส้นตรง (identity)
float linear(float x) {
    return x;
}

// binary_step: ฟังก์ชันขั้นบันได
float binary_step(float x) {
    if (x >= 0.0f) return 1.0f;
    else return 0.0f;
}

// sigmoid: ฟังก์ชัน Sigmoid
float sigmoid(float x) {
    return 1.0f / (1.0f + expf(-x));
}

// tanh: ฟังก์ชัน Hyperbolic tangent
float tanh_act(float x) {
    return tanhf(x);
}

// relu: ฟังก์ชัน ReLU
float relu(float x) {
    if (x > 0.0f) return x;
    else return 0.0f;
}

// leaky_relu: ReLU แบบมี slope เล็กเมื่อ x < 0
float leaky_relu(float x) {
    if (x > 0.0f) return x;
    else return 0.01f * x;
}

// softsign: ฟังก์ชัน Softsign
float softsign(float x) {
    return x / (1.0f + fabsf(x));
}

// elu: Exponential Linear Unit
float elu(float x) {
    if (x >= 0.0f) return x;
    else return expf(x) - 1.0f;
}

// softplus: ฟังก์ชัน Softplus
float softplus(float x) {
    if (x > 0.0f) return x + log1pf(expf(-x));
    else return log1pf(expf(x));
}

// swish: ฟังก์ชัน Swish
float swish(float x) {
    return x / (1.0f + expf(-x)); // x*sigmoid(x)
}

// mish: ฟังก์ชัน Mish
float mish(float x) {
    float sp;
    if (x > 0.0f) sp = x + log1pf(expf(-x));
    else sp = log1pf(expf(x));
    return x * tanhf(sp);
}

// hard_sigmoid: ฟังก์ชัน Hard Sigmoid
float hard_sigmoid(float x) {
    float r = 0.2f * x + 0.5f;
    if (r < 0.0f) r = 0.0f;
    if (r > 1.0f) r = 1.0f;
    return r;
}

// hard_swish: ฟังก์ชัน Hard Swish
float hard_swish(float x) {
    return x * hard_sigmoid(x);
}

// ---------------- List ของ Activation functions ----------------
const char* activation_names[13] = {
    "linear",        // ฟังก์ชันเส้นตรง
    "binary_step",   // ฟังก์ชันขั้นบันได
    "sigmoid",       // ฟังก์ชัน Sigmoid
    "tanh",          // ฟังก์ชัน Hyperbolic tangent
    "relu",          // ฟังก์ชัน ReLU
    "leaky_relu",    // ReLU แบบ slope เล็กเมื่อ x < 0
    "softsign",      // ฟังก์ชัน Softsign
    "elu",           // Exponential Linear Unit
    "softplus",      // ฟังก์ชัน Softplus
    "swish",         // ฟังก์ชัน Swish
    "mish",          // ฟังก์ชัน Mish
    "hard_sigmoid",  // ฟังก์ชัน Hard Sigmoid
    "hard_swish"     // ฟังก์ชัน Hard Swish
};

// ---------------- Main ----------------
int main() {
    printf("List of activation functions:\n");
    for(int i = 0; i < 13; i++) {
        printf("%2d) %s\n", i+1, activation_names[i]);
    }
    return 0;
}
